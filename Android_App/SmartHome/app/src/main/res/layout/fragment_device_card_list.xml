<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.smarthome.smarthome.Views.DeviceInteraction.DeviceCardList.DeviceCardListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favourites_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingLeft="@dimen/recycler_view_padding"
        android:paddingRight="@dimen/recycler_view_padding"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="20dp" />

</FrameLayout>
