<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.smarthome.smarthome.Views.LogInRegister.Register.QRScannerFragment">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qr_container_manual_enter"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/qr_container_manual_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/et_qr_manual_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="1212121212"/>

        <Button
            android:id="@+id/btn_qr_manual_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>
